{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ 활성 파일 빌드 및 실행",
            "type": "shell",
            "command": "/usr/local/bin/g++",
            "args": [
                "-std=gnu++14",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}\"",
                "&&",
                "\"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "빌드 후 자동 실행"
        }
    ]
}
